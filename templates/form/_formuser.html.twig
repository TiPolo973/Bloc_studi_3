<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        
        {% block stylesheets %}<link rel="stylesheet" href={{asset('assets/form.css')}}>{% endblock %}
        {% block javascripts %}
        {% endblock %}
    </head>
    <body>
        {% block body %}
    <div class='body_form'>
    {{ form_start(userform)}}
    <div class='Flt'>
    {{form_row(userform.firstName)}}
    {{form_row(userform.lastName)}}
    </div>
    {{form_row(userform.email)}}
    {{form_row(userform.password)}}
    {{form_errors(userform.password)}}
    {{form_rest(userform)}}
    {{ form_end(userform)}}
    </div>
    {% endblock %}

    </body>
</html>